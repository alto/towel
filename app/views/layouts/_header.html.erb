<ul class="navi">
  <%- if logged_in? -%>
    <li><%= link_to('admin', admin_path) if current_user.admin? %></li>
		<li><%= link_to h(current_user.login), user_path(current_user), :class => 'border' %></li>
		<li><%= link_to('Log out', session_path, :method => :delete) %></li>
	<%- else -%>
    <li><%= link_to('sign-up', new_user_path) %></li>
    <li><%= link_to_function('sign-in', visual_effect(:toggle_blind, 'loginForm')) %></li>
	<%- end -%>
</ul>
<strong><%= link_to '42towels', root_path %> - the planning game</strong>

<%- unless logged_in? -%>
  <div id="loginForm" style="display:none;">
    <% form_tag session_path do -%>
      <div class="formCol">
        <label for="login">login</label>
        <%= text_field_tag 'login', nil, :class => 'input' %>
        <label for="password">password</label>
        <%= password_field_tag 'password', nil, :class => 'input' %>
      </div>
      <div class="formCol" id="colTwo">
    	  <div class="row">
    		  <%= check_box_tag 'remember_me' %>
          <label for="remember_me">Stay logged in on this machine.</label>
        </div>
        <%= submit_tag 'sign in' %> or
        <%= link_to_function('cancel', visual_effect(:blind_up, 'loginForm')) %>
      </div>  
    <% end -%>

    <%= link_to "You forgot your password?", recover_password_path, :id => 'forgot' %>
  </div>
<%- end -%>

