			<% form_tag :action => 'recover_password' do %>
			<%= flash[:error] %>
			<fieldset>
				<div class="formRow">
					<label for="email">Emailadresse*</label>
					<%= text_field :email, '', :class => 'input' %>
				</div>
			</fieldset>
			<div class="formRow">
				<div class="buttons">
      		<%= link_to(image_tag('buttons/bt_abbrechen.gif', :alt => 'Abbrechen'), root_path) %>
					<%= image_submit_tag('buttons/bt_speichern.gif', :alt => 'Speichern') %>
				</div>
			</div>
		<% end %>
	</div>
	<div class="sideShow">	
	</div>
</div>